<div id="searchContainer">
	<div class="row">
		<div class="col-12 md">
			<form action="/spaces/search/" method="GET">
				<h1>City:</h1><br>
				<input type="text" name="city">
				<button type="submit">
			</form>
		</div>
	</div>

	<div class="row">
		<div class="col-6 md">
			{{#if user}}
				{{#each user.space}}
					<div class="searchResult">
						<img src="{{this.photo}}" height="150px" width="150px">
						<a href="space/{{this.id}}"> <h3>Address: {{this.address}}</h3></a>
						<h3>{{this.city}}, {{this.state}}</h3>
						<h3>{{this.zipcode}}</h3>
						<h3>${{this.price}} / month</h3>
						<h3>Available from <strong>{{this.from}}</strong> until <strong>{{this.to}}</strong></h3>
					</div>
				{{/each}}
			{{else}}
				{{#each space}}
					<div class="searchResult">
						<img src="{{this.photo}}" height="150px" width="150px">
						<a href="space/{{this.id}}"> <h3>Address: {{this.address}}</h1></a>
						<h3>{{this.city}}, {{this.state}}</h3>
						<h3>{{this.zipcode}}</h3>
						<h3>${{this.price}} / month</h3>
						<h3>Available from <strong>{{this.from}}</strong> until <strong>{{this.to}}</strong></h3>
					</div>
				{{/each}}
			{{/if}}
		</div>
		<div class="col-6 md">
		</div>
	</div>
</div>
